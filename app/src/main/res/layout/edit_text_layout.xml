            </LinearLayout>
        </HorizontalScrollView>

    <com.rtugeek.android.colorseekbar.ColorSeekBar
        android:id="@+id/color_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_fonts"
        app:alphaBarPosition="10"
        app:barHeight="7dp"
        app:barMargin="10dp"
        app:colorBarPosition="10"
        app:showAlphaBar="true" />


    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/color_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|textMultiLine"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Add Text Here"
        android:textSize="30sp"
        android:textColorHint="@color/grey" />
</RelativeLayout>