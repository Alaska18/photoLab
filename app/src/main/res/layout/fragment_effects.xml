<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/utility_effects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/close_effects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/close_black" />

        <ImageView
            android:id="@+id/compare_effects_final"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/compare" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/seekbar_of_effects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/compare_effects"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/compare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/compare"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <TextView
                android:id="@+id/effects_heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:text="Heading"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:fontFamily="@font/assistant_extralight" />

            <LinearLayout
                android:id="@+id/okay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/done_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Okay"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

        </LinearLayout>


        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarSaturation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="25"
            app:bsb_min="0"
            app:bsb_progress="10"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarShadows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="100"
            app:bsb_min="0"
            app:bsb_progress="0"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarSharpness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="55"
            app:bsb_min="20"
            app:bsb_progress="30"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="14"
            app:bsb_min="8"
            app:bsb_progress="10"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarContrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="700"
            app:bsb_min="100"
            app:bsb_progress="300"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarHighlights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="0"
            app:bsb_min="10"
            app:bsb_progress="0"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/seekBarExposure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:bsb_bubble_color="@color/white"
            app:bsb_bubble_text_color="@color/black"
            app:bsb_is_float_type="false"
            app:bsb_max="1150"
            app:bsb_min="800"
            app:bsb_progress="1000"
            app:bsb_second_track_color="@color/blue_bright"
            app:bsb_section_text_color="@color/white"
            app:bsb_section_text_position="sides"
            app:bsb_section_text_size="12sp"
            app:bsb_show_thumb_text="true"
            app:bsb_touch_to_seek="true"
            app:bsb_track_color="@color/white" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/horizontal_effects_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.85"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/saturation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/saturationI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/saturation" />

                <TextView
                    android:id="@+id/saturationT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Saturation"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contrast"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/contrast" />

                <TextView
                    android:id="@+id/contrastT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Contrast"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/brightness" />

                <TextView
                    android:id="@+id/brightnessT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Brightness"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharpness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/sharpness" />

                <TextView
                    android:id="@+id/sharpnessT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Sharpness"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shadows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/shadow" />

                <TextView
                    android:id="@+id/shadowsT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Shadows"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/highlight" />

                <TextView
                    android:id="@+id/highlightT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="HighLight"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/exposure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/exposure" />

                <TextView
                    android:id="@+id/exposureT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="Exposure"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:fontFamily="@font/assistant_extralight" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>